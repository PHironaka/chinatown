<style>
  {% if section.settings.logo != blank %}
    .site-header__logo-image {
      max-width: {{ section.settings.logo_max_width }}px;
    }
  {% endif %}
</style>

  <h2 class="marquee">
         <span style="color:{% if section.settings.home-video-text-1 %} {{ section.settings.color-font-1 | escape }} {%endif%};"> {{ section.settings.home-video-text-1 | escape }}</span>
         <span style="color:{% if section.settings.home-video-text-2 %} {{ section.settings.color-font-2 | escape }} {%endif%};">{{ section.settings.home-video-text-2 | escape }}</span>
         <span style="color:{% if section.settings.home-video-text-3 %} {{ section.settings.color-font-3 | escape }} {%endif%};">{{ section.settings.home-video-text-3 | escape }}</span>
         
        </h2>


<div class="about-modal">
  <h2>Inspired by the spirit of Canal St.</h2> 
  <img src="//cdn.shopify.com/s/files/1/1522/4434/files/nle-10197-rose-open-salon-hair-neon-sign_large.jpg?v=1478068685">
</div>
<div class="search-form">
   <form action="/search" method="get" role="search">

      <input type="search"
             name="q"
             id="Search"
             value="{{ search.terms | escape }}"
             placeholder="{{ 'general.search.placeholder' | t }}">
      <button type="submit" class="btn">
        {% include 'icon-search' %}
        <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
      </button>

    </form>
          <button class="close-search"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>  </button>

</div>
<div data-section-id="{{ section.id }}" data-section-type="header-section">
  <header role="banner">
<div class="container">
   


    {% if shop.customer_accounts_enabled %}
      <ul>
        {% if customer %}
          <li>
            {% if customer.first_name != blank %}
              {% capture first_name %}<a href="/account">{{ customer.first_name }}</a>{% endcapture %}
              {{ 'layout.customer.logged_in_as_html' | t: first_name: first_name }}
            {% else %}
              <a href="/account">{{ 'layout.customer.account' | t }}</a>
            {% endif %}
          </li>
          <li>
            {{ 'layout.customer.log_out' | t | customer_logout_link }}
          </li>
        {% else %}
          <li>
            {{ 'layout.customer.log_in' | t | customer_login_link }}
          </li>
          <li>
            {{ 'layout.customer.create_account' | t | customer_register_link }}
          </li>
        {% endif %}
      </ul>
    {% endif %}
    

    <div class="center-logo">
<a href="/">
     
          {% include  'chinatown-logo' %}
     
</a>
        <nav role="navigation">
    <ul class="site-nav">
      {% for link in linklists[section.settings.main_linklist].links %}
        {%- assign child_list_handle = link.title | handleize -%}
        {% if menus[child_list_handle].links != blank %}
          <li class="site-nav--has-submenu{% if link.active %} site-nav--active{% endif %}">
            <a href="{{ link.url }}" class="site-nav__link">
              {{ link.title }}
            </a>
            <ul class="site-nav__submenu">
<div class="container">

              {% for childlink in menus[child_list_handle].links %}
                <li {% if childlink.active %}class="site-nav--active"{% endif %}>
                  <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.title | escape }}</a>
                </li>
              {% endfor %}
              </div>
            </ul>
          </li>
        {% else %}
          <li {% if link.active %}class="site-nav--active" {% elsif link.title == 'About' %}class="site-nav--about"{% endif %}>
            <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>

   
      </div>

<div class="col-right">
<button type="submit" class="search-button">
      {% include 'icon-search' %}
      
  </button>

<a href="/cart">
      {% include 'icon-cart' %}
      ({{ cart.item_count }} )
    </a>

 
  </div>

  
  </div>

  </header>

</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      },

      {
        "type": "text",
        "id": "home-video-text-1",
        "label": "Heading",
        "default": "Welcome!"
      },

        {
        "type": "text",
        "id": "home-video-text-2",
        "label": "Heading",
        "default": "Welcome!"
      },

        {
        "type": "text",
        "id": "home-video-text-3",
        "label": "Heading",
        "default": "Welcome!"
      },

       

      {
        "type": "color",
        "id": "color-font-1",
        "label": "font color-1",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "color-font-2",
        "label": "font color-2",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "color-font-3",
        "label": "font color-3",
        "default": "#fff"
      }

   

    ]
  }
{% endschema %}
